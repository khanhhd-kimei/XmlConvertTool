{% load app_filters %}
<category category-id="root">
    <online-flag>true</online-flag>
    <template/>
    <page-attributes/>
</category>
{% for category in dataset %}
<category category-id="{{ category.category_id|ztrim }}">
    <display-name xml:lang="x-default">{{ category.category_name|ztrim }}</display-name>
    <display-name xml:lang="ja-JP">{{ category.category_name|ztrim }}</display-name>
    <online-flag>true</online-flag>
    {% comment %} 
    <online-from>{{ category.from|default:now }}</online-from>
    <online-to>{{ category.to|default:now }}</online-to>
    {% endcomment %} 
    <parent>{{ category.category_parent|default:'root' }}</parent>
    <position>{{ category.category_position|default:0 }}</position>
    {% if category.category_level == 1 %}
    <template>rendering/category/categoryproducthits.isml</template>
    {% else %}
    <template/>
    {% endif %}
    <page-attributes/>
    <custom-attributes>
        <custom-attribute attribute-id="category_custom_url" xml:lang="x-default">{{ category.category_custom_url }}</custom-attribute>
		<custom-attribute attribute-id="showInMenu" xml:lang="x-default">true</custom-attribute>
    </custom-attributes>
</category>
{% endfor %}
